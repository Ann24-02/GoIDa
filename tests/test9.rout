-- defines simple functions (addition, even check), uses them, and prints results

routine add(a : integer, b : integer) : integer => a + b
routine is_even(x : integer) : boolean => (x % 2) = 0

routine main() is
    var s : integer is add(7, 5)
    print s

    if is_even(s) then
        print 1
    else
        print 0
    end
end
