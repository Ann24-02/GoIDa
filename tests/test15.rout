-- demonstrates reference semantics for records and procedure calls

type Point is record
    var x : integer
    var y : integer
end

routine shiftPoint(ref p : Point, dx : integer, dy : integer) is
    p.x := p.x + dx
    p.y := p.y + dy
end

routine main() is
    var orig : Point is {x: 5, y: 3}
    var copy : Point is orig -- copies reference, not data

    shiftPoint(orig, 2, 2) -- modifies the original record

    print copy.x, copy.y -- should print 7, 5 (both variables reference same object)
end