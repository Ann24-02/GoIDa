-- demonstrates variable and type shadowing in nested scopes

routine main() is
    var x : integer is 5
    type MyType is integer

    if true then
        var x : real is 3.14 -- shadows outer integer x
        type MyType is real   -- shadows outer MyType type
        var y : MyType is x   -- should be type real

        print y -- should print 3.14
    end

    -- original x and MyType should be visible again here
    var z : MyType is x
    print z -- Should print 5
end